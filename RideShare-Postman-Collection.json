{
  "info": {
    "name": "RideShare Backend API",
    "description": "Complete API collection for RideShare Backend with JWT Authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User (Passenger)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john\",\n  \"password\": \"1234\",\n  \"role\": \"ROLE_USER\"\n}"
            },
            "url": {
              "raw": "http://localhost:8081/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register Driver",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"driver1\",\n  \"password\": \"abcd\",\n  \"role\": \"ROLE_DRIVER\"\n}"
            },
            "url": {
              "raw": "http://localhost:8081/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john\",\n  \"password\": \"1234\"\n}"
            },
            "url": {
              "raw": "http://localhost:8081/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Login Driver",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"driver1\",\n  \"password\": \"abcd\"\n}"
            },
            "url": {
              "raw": "http://localhost:8081/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "User (Passenger) Operations",
      "item": [
        {
          "name": "Create Ride Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{user_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickupLocation\": \"Koramangala\",\n  \"dropLocation\": \"Indiranagar\"\n}"
            },
            "url": {
              "raw": "http://localhost:8081/api/v1/rides",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "v1", "rides"]
            }
          }
        },
        {
          "name": "Get My Rides",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{user_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8081/api/v1/user/rides",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "v1", "user", "rides"]
            }
          }
        },
        {
          "name": "Complete Ride (User)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{user_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8081/api/v1/rides/{{ride_id}}/complete",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "v1", "rides", "{{ride_id}}", "complete"]
            }
          }
        }
      ]
    },
    {
      "name": "Driver Operations",
      "item": [
        {
          "name": "View Pending Ride Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driver_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8081/api/v1/driver/rides/requests",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "v1", "driver", "rides", "requests"]
            }
          }
        },
        {
          "name": "Accept Ride",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driver_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8081/api/v1/driver/rides/{{ride_id}}/accept",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "v1", "driver", "rides", "{{ride_id}}", "accept"]
            }
          }
        },
        {
          "name": "Get My Accepted Rides",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driver_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8081/api/v1/driver/rides",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "v1", "driver", "rides"]
            }
          }
        },
        {
          "name": "Complete Ride (Driver)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driver_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8081/api/v1/rides/{{ride_id}}/complete",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["api", "v1", "rides", "{{ride_id}}", "complete"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "user_token",
      "value": "your_user_jwt_token_here"
    },
    {
      "key": "driver_token",
      "value": "your_driver_jwt_token_here"
    },
    {
      "key": "ride_id",
      "value": "ride_id_here"
    }
  ]
}
